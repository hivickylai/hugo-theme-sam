doctype html
html
  |
  head
      | {{ partial "head.html" . }}
      title
        | {{ .Title }}
  body
      .section#splash
          | {{ .Site.Params.introTitle }}
          | {{ .Site.Params.introSubtitle }}
          hr
          | {{ if .Site.Params.mainMenu }}
          | {{ range .Site.Params.mainMenu }}
          .big-link
              a(href='{{.link}}') {{.text}}
          | {{ end }}
          | {{ else }}
          | {{ range .Site.Sections }}
          .big-link
              a(href='{{.Permalink}}') {{.Title}}
          | {{ end }}
          | {{ end }}
